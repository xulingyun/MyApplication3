<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/sing_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_music_note_red_900_24dp" />

    <TextView
        android:id="@+id/notifications_sing"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/sing_icon"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/notifications_singer"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/notifications_sing"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/sing_icon"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/gray"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/notifications_stop"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/notifications_sing"
        android:scaleType="center"
        android:src="@drawable/ic_play_circle_outline_white_36dp" />

    <ImageView
        android:id="@+id/notifications_next"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/notifications_stop"
        android:scaleType="center"
        android:src="@drawable/ic_skip_next_white_36dp" />

    <ImageView
        android:id="@+id/notifications_close"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/notifications_next"
        android:scaleType="center"
        android:src="@drawable/ic_close_grey_900_24dp" />
</RelativeLayout>