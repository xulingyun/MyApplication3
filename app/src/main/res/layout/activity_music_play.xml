<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:id="@+id/activity_music_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wc.xulingyun.com.xly.myapplication.MusicPlayActivity">
    
    <android.support.v7.widget.Toolbar
        android:title="@string/action_settings"
        android:id="@+id/toolbar"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
    <ScrollView
        android:layout_below="@id/toolbar"
        android:id="@+id/song_word"
        android:layout_width="match_parent"
        android:layout_height="350dp"/>

    <RelativeLayout
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/song_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/music_progress"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatTextView
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="59:59"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:typeface="monospace"/>

            <ProgressBar
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_weight="5"
                android:max="100"
                android:progress="50"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <android.support.v7.widget.AppCompatTextView
                android:textColor="@color/white"
                android:layout_weight="1"
                android:text="59:59"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:typeface="monospace"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_below="@id/music_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_autorenew_white_24dp"
                android:id="@+id/play_way"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_skip_previous_white_36dp"
                android:id="@+id/play_previous"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/ic_pause_circle_outline_white_48dp"
                android:id="@+id/play_pause"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_skip_next_white_36dp"
                android:id="@+id/play_next"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_list_white_24dp"
                android:id="@+id/play_list"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
